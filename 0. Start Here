Install Debian Testing

ssh user@IP
su root

# Ap√≥s instala√ß√£o netinstall do Debian Testing
apt update
apt install sudo labwc waybar wofi foot thunar grim slurp distrobox docker.io wlr-randr brightnessctl pulseaudio pavucontrol terminator inxi btop libinput-tools
#? network-manager-gnome

nano /etc/group
sudo:x:27:seu_usuario

sudo usermod -aG docker ztge

curl -sSL https://raw.githubusercontent.com/urbancompasspony/bashrc/main/install.sh | bash

exit
mkdir .config/labwc; nano .config/labwc/rc.xml
<keyboard>
  <keybind key="A-Return"><action name="Execute"><command>foot</command></action></keybind>
  <keybind key="A-d"><action name="Execute"><command>wofi --show=drun</command></action></keybind>
  <keybind key="A-e"><action name="Execute"><command>thunar</command></action></keybind>
</keyboard>

mkdir .config/waybar; nano .config/waybar/config
{
  "layer": "top",
  "position": "top",
  "height": 30,
  "modules-left": ["custom/menu"],
  "modules-center": ["clock"],
  "modules-right": ["backlight", "pulseaudio", "battery", "custom/power"],
  
  "custom/menu": {
    "format": "Apps",
    "on-click": "wofi --show=drun"
  },
  
  "clock": {
    "format": "{:%H:%M}",
    "format-alt": "{:%Y-%m-%d %H:%M:%S}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  },
  
  "backlight": {
    "format": "{percent}% ‚òÄ",
    "on-scroll-up": "brightnessctl set +5%",
    "on-scroll-down": "brightnessctl set 5%-",
    "on-click": "brightnessctl set 50%"
  },
  
  "battery": {
    "format": "{capacity}% {icon}",
    "format-icons": ["", "", "", "", ""]
  },
  
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}",
    "format-muted": "üîá",
    "format-icons": {
      "default": ["üîà", "üîâ", "üîä"]
    },
    "on-click": "pavucontrol"
  },
  
  "custom/power": {
    "format": "‚èª",
    "on-click": "echo -e 'Shutdown\\nReboot\\nLogout' | wofi --show=dmenu --prompt='Power:' | xargs -I {} systemctl {}"
  }
}

nano .config/labwc/rc.xml
<?xml version="1.0"?>
<labwc_config>
<keyboard>
  <!-- Terminal com Ctrl+Alt+T -->
  <keybind key="C-A-t">
    <action name="Execute">
      <command>terminator</command>
    </action>
  </keybind>
  
  <!-- Outros atalhos √∫teis -->
  <keybind key="A-Return">
    <action name="Execute">
      <command>foot</command>
    </action>
  </keybind>
  
  <keybind key="A-d">
    <action name="Execute">
      <command>wofi --show=drun</command>
    </action>
  </keybind>
  
  <keybind key="A-e">
    <action name="Execute">
      <command>thunar</command>
    </action>
  </keybind>
</keyboard>
</labwc_config>

su root
systemctl edit getty@tty1
# Adicionar:
[Service]
ExecStart=
ExecStart=-/sbin/agetty --autologin ztge --noclear %I $TERM
exit

nano .config/labwc/autostart
#!/bin/bash
wlr-randr --output eDP-1 --transform 270 &
waybar &

chmod +x ~/.config/labwc/autostart

sudo apt purge needrestart

sudo nano /etc/udev/rules.d/99-steamdeck-touch-rotation.rules
# SteamDeck touchscreen rotation
SUBSYSTEM=="input", KERNEL=="event*", ATTRS{name}=="FTS3528:00 2808:1015", ENV{LIBINPUT_CALIBRATION_MATRIX}="0 1 0 -1 0 1"

# TO START:
$ labwc
